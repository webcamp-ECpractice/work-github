
<div class="container-fluid m-5">
    <h3 class="mb-4"><span class="bg-warning">配送先編集</span></h3>

    <%= form_with model: @address, url: address_path do |f| %>
    <table>
      <tr>
          <th><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></th>
          <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td>
          <%= f.text_field :name %>
          <%= f.submit "編集内容を保存",class:"btn btn-success"  %>
        </td>
      </tr>
    </table>

    <% end %>
</div>