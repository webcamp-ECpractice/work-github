<h3>ショッピングカート</h3>

<%= link_to "カート内を空にする", cart_items_destroy_all_path, method: :delete %>

<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>

  <% @cart_item.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
          <%= f.hidden_field :item_id, :value => cart_item.item_id %>
          <%= f.select :amount, *[1..5] %>
          <%= f.submit "変更" %>
        <% end %>

      </td>
      <td><%= cart_item.subtotal.to_s(:delimited)  %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <thead>
    <tr>
      <td>合計金額</td>
      <td><%= @total.round.to_s(:delimited) %></td>
    </tr>
  </thead>
</table>

<%= link_to "買い物を続ける", items_path %>


<%= link_to "情報入力に進む", new_order_path %>