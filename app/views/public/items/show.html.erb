<div class="container-fluid mt-3">

<div class="row p-3">
  <div class="col-2">
    <%= image_tag @item.image,size: "200x200" %>
  </div>

  <div class="col-8">
    <%= form_with model: @cart_item, url: cart_items_path do |f| %>

      <table>
        <tbody>
          <tr>
            <td><h2><%= @item.name %></h2></td>
          </tr>
          <tr>
            <td><h4 class="mt-3"><%= @item.introduction %></h4></td>
          </tr>
           <tr>
            <td><h4 class="mt-3">¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</h4></td>
          </tr>
          <tr>
            <td>
              <div class="mt-3">
                <%= f.select :amount, [["1個", "1"], ["2個", "2"],["3個","3"],["4個","4"]], include_blank: "個数選択" %>
                <%= f.submit "カートに入れる",class:"btn btn-primary" %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.hidden_field :customer_id, :value => current_customer.id %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>

  </div>