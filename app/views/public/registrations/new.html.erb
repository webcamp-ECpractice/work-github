<h2>新規会員登録</h2>

<table>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <tr>
      <div class="field">
      <th>
        名前
      </th>
      <td>
        <%= f.label :first_name,"（姓）" %>
        <%= f.text_field :first_name, autofocus: true %>

        <%= f.label :last_name, "（名）" %>
        <%= f.text_field :last_name, autofocus: true %>
      </td>
      </div>
    </tr>

    <tr>
      <div class="field">
      <th>
        フリガナ
      </th>
      <td>
        <%= f.label :first_name_kana,"（セイ）" %>
        <%= f.text_field :first_name_kana, autofocus: true %>

        <%= f.label :last_name_kana, "（メイ）" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </td>
      </div>
    </tr>

    <tr>
      <div class="field">
      <th>
        <%= f.label :email, "メールアドレス" %>
      </th>
      <td>
        <%= f.email_field :email, autofocus: true %>
      </td>
      </div>
    </tr>

    <tr>
      <div class="field">
      <th>
          <%= f.label :postal_code,"郵便番号（ハイフンなし）" %>
      </th>
      <td>
        <%= f.text_field :postal_code, autofocus: true %>
      </td>
      </div>
    </tr>


    <tr>
      <div class="field">
      <th>
        <%= f.label :address,"住所" %>
      </th>
      <td>
        <%= f.text_field :address, autofocus: true %>
      </td>
      </div>
    </tr>



    <tr>
      <div class="field">
      <th>
         <%= f.label :telephone_number,"電話番号（ハイフンなし）" %>
      </th>
      <td>
        <%= f.text_field :telephone_number, autofocus: true %>
      </td>
      </div>
    </tr>


    <tr>
      <div class="field">
      <th>
         <%= f.label :password, "パスワード（６文字以上）" %>
      </th>
      <td>
         <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
      </div>
    </tr>

    <tr>
      <div class="field">
      <th>
        <%= f.label :password_confirmation,"パスワード（確認用）" %>
      </th>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
      </div>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

