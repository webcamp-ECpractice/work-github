<h3>注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td>〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name_address %>
      </td>
      <td>
        <% order.items.each do |item| %>
          <%= item.name %><br>
        <% end %>
      </td>
      <td><%= order.payment_amount.to_s(:delimited) %></td>
      <td><%= order.is_ordered_i18n %></td>
      <td><%= link_to "表示する" , order_path(order.id) %> </td>
    </tr>
  </tbody>
  <% end %>
</table>