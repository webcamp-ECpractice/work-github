
<div class="container-fluid m-5">
    <h3 class="mb-4"><span class="bg-warning">注文履歴一覧</span></h3>

    <table class="table table-bordered col-7">
      <thead>
        <tr class="table-warning">
          <td><h5>注文日</h5></td>
          <td><h5>配送先</h5></td>
          <td><h5>注文商品</h5></td>
          <td><h5>支払金額</h5></td>
          <td><h5>ステータス</h5></td>
          <td><h5>注文詳細</h5></td>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td>〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name_address %>
          </td>
          <td>
            <% order.items.each do |item| %>
              <%= item.name %><br>
            <% end %>
          </td>
          <td><%= order.payment_amount.to_s(:delimited) %></td>
          <td><%= order.is_ordered_i18n %></td>
          <td><%= link_to "表示する" , order_path(order.id), class:"btn btn-primary" %> </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>