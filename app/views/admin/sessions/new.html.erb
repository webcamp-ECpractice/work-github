<div class="container m-5">

  <h2 class="mb-4"><span class="bg-warning">管理者ログイン</span></h2>

  <div class="row ml-3">

    <%= form_with model: @admin, url: new_admin_session_path do |f| %>
      <div class="field">
        <%= f.label :email ,'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password ,'パスワード' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>



    <div class="actions mt-3" >
      <%= f.submit "ログイン" ,class: "btn btn-secondary" %>
    </div>
  <% end %>
   </div>

</div>


