<h3>商品新規登録</h3>

<%= form_with model: @item, url: admin_items_path(@item.id) do |f| %>

  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image %>

  <%= f.label :name , "商品名" %>
  <%= f.text_field :name %>


  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction %>

  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, [["ケーキ", "1"], ["プリン", "2"],["焼き菓子","3"],["キャンディ","4"]], include_blank: "--選択して下さい--" %>

  <%= f.label :price, "税抜価格" %>
  <%= f.text_field :price %>円


  <%= f.label :is_active, "販売ステータス" %>
  <%= f.radio_button :is_active, "true" %>
  <%= f.label :is_active, "販売中" %>

  <%= f.radio_button :is_active, "false" %>
  <%= f.label :is_active, "販売停止中" %>

  <%= f.submit '新規登録' %>

<% end %>