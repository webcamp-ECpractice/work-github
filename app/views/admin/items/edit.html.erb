<h3>商品編集</h3>

<%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
  <table>
    <tbody>
      <tr>
        <th><%= f.label :image, "商品画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>
      <tr>
        <th><%= f.label :name , "商品名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :introduction, "商品説明" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
       <tr>
        <th><%= f.label :genre_id, "ジャンル" %></th>
        <td><%= f.select :genre_id, [["ケーキ", "1"], ["プリン", "2"],["焼き菓子","3"],["キャンディ","4"]], include_blank: "--選択して下さい--" %></td>
      </tr>
      <tr>
        <th><%= f.label :price, "税抜価格" %></th>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <th><%= f.label :is_active, "販売ステータス" %></th>
        <td><%= f.radio_button :is_active, "true" %><%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, "false" %><%= f.label :is_active, "販売停止中" %></td>
      </tr>
    </tbody>
  </table>
   <%= f.submit '変更を保存' %>

 <% end %>