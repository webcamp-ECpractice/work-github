<h3>注文履歴詳細</h3>

<table>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.address_display %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td><%= form_with model: @order.is_ordered, url: admin_order_detail_path(@order.id) do |f| %>
      <%= f.select :is_ordered, [["入金待ち", "1"], ["入金確認", "2"],["動作中","3"],["発送準備中","4"],["発送済み","5"]] %>
      <% end %>
      </td>
    </tr>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込み）</td>
      <td>数量</td>
      <td>小計</td>
      <td>製作ステータス</td>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.unit_price %></td>
      <td><%= order_detail.items_amount %></td>
      <td><%= order_detail.subtotal %></td>
      <td><%= order_detail.is_maked_i18n %>
      <!--</%= link_to "更新" , admin_order_detail_path(order_detail.id) %>-->
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

