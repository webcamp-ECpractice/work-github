<div class="container-fluid m-5">

  <h3 class="mb-5"><span class="bg-warning"><%= @customer.first_name %><%= @customer.last_name %>さんの注文履歴</span></h3>

  <div class="row">
    <table class="table col-8">
      <thead>
          <tr class="table-warning">
            <td class="h5">購入日時</td>
            <td class="h5">注文個数</td>
            <td class="h5">注文ステータス</td>
          </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id) %></td>

          <% sum = 0 %>
          <% order.order_details.each do |order_detail| %>

          <% sum += order_detail.items_amount %>

          <% end %>
          <td><%= sum %></td>
          <td><%= order.is_ordered_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

    <%= paginate @orders %>

    </div>
</div>