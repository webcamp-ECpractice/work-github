
<div class="container-fluid m-5">

  <h3 class="mb-3"><span class="bg-warning">ジャンル一覧・追加</span></h3>


  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <%= f.label :name , "ジャンル名" %>
    <%= f.text_field :name %>

    <%= f.submit '新規登録',class:"btn btn-primary ml-2"  %>

  <% end %>


  <table class="table border col-3 mt-3">
    <thead>
      <tr class="table-warning">
        <td class="h5">
          ジャンル
         </td>
         <td>
         </td>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success"  %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>

</div>

